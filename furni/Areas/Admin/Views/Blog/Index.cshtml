@model List<Blog>

<div>
    <div style="margin-bottom: 15px;">
        <a asp-area="Admin"
           asp-controller="Blog"
           asp-action="Create"
           class="btn btn-success">
            Create New Blog
        </a>
    </div>

    <table class="table table-bordered" style="table-layout: fixed; width: 100%;">
        <thead>
            <tr>
                <th style="width: 5%;">Id</th>
                <th style="width: 20%;">Title</th>
                <th style="width: 25%;">Text</th>
                <th style="width: 15%;">Author</th>
                <th style="width: 15%;">Image</th>
                <th style="width: 10%;">Status</th>
                <th style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Id</td>
                    <td>@blog.Title</td>
                    <td>@blog.Text</td>
                    <td>@blog.EmployeeId</td>
                    <td>
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" alt="Blog Image" style="max-width: 100px; height:auto;" />
                        }
                    </td>
                    <td>@(blog.IsDeleted ? "Inactive" : "Active")</td>
                    <td>
                        <a class="btn btn-warning btn-sm"
                           asp-area="Admin"
                           asp-controller="Blog"
                           asp-action="Update"
                           asp-route-id="@blog.Id">
                            Update
                        </a>

                        <form asp-area="Admin"
                              asp-controller="Blog"
                              asp-action="Delete"
                              asp-route-id="@blog.Id"
                              method="post"
                              style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                        <form asp-area="Admin"
                              asp-controller="Blog"
                              asp-action="Toggle"
                              asp-route-id="@blog.Id"
                              method="post"
                              style="display:inline; margin-left: 5px;">
                            <button type="submit" class="btn btn-sm @(blog.IsDeleted ? "btn-secondary" : "btn-info")">
                                @(blog.IsDeleted ? "Inactive" : "Active")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>